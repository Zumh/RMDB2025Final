<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="BookStore" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Main content -->
            <RowDefinition Height="Auto" />
            <!-- Status bar -->
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Login">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Database Login" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200" Name="userId"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Password:" Width="100"/>
                            <TextBox Width="200" Name="loginPassword"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Database:" Width="100"/>
                            <TextBox Width="200" Name="dataBaseName"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Button Content="Login" Width="66" Margin="0,0,0,0" Name="LoginBtn"/>
                            <Button Content="Clear" Width="66" Margin="10,0,0,0" Name="clearLoginBtn" Click="ClearLogin_Click"/>
                        </StackPanel>
                        
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                      
 
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Customer">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Customer Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Address:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Phone:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>

                        <TextBlock Text="Customer List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <ListBox Height="200">
                            <ListBoxItem>John Doe</ListBoxItem>
                            <ListBoxItem>Jane Smith</ListBoxItem>
                        </ListBox>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Customer" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Remove Customer" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Search Customer" Width="140"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Book">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Book info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Book Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Title:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        <!-- ISBN -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="ISBN:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        <!-- PRICE -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Price:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        <!-- Publisher -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Publisher:" Width="100"/>
                            <TextBox Width="200"/>
                        </StackPanel>
                        <!-- Stock -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Stock:" Width="100"/>
                            <TextBlock Text="0"/>
                        </StackPanel>
                        <!-- Book List -->
                        <TextBlock Text="Book List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <ListBox Height="200">
                            <ListBoxItem>Book Title</ListBoxItem>
                            <ListBoxItem>Book Title</ListBoxItem>
                        </ListBox>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Book" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Remove Book" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Search Book" Width="140"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Order -->
            <TabItem Header="Order">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- MAIN CONTENT (LEFT AREA) -->
                    <Grid Grid.Column="0" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- TOP LEFT: Book Information -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Book Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Title:" Width="100"/>
                                <TextBlock Text="BookTitle..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="ISBN:" Width="100"/>
                                <TextBlock Text="ISBN..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Price:" Width="100"/>
                                <TextBlock Text="Price..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Publisher:" Width="100"/>
                                <TextBlock Text="Publisher..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Stock:" Width="100"/>
                                <TextBlock Text="0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- TOP RIGHT: Order Summary -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                            <TextBlock Text="Order Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Total Items:" Width="90"/>
                                <TextBlock Text="0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total Price:" Width="90"/>
                                <TextBlock Text="$0.00"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- BOTTOM LEFT: Book List -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Book List" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox Height="200">
                                <ListBoxItem>Book Title</ListBoxItem>
                                <ListBoxItem>Book Title</ListBoxItem>
                            </ListBox>
                        </StackPanel>

                        <!-- MIDDLE: Add / Remove Buttons -->
                        <StackPanel Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                            <Button Content="Add order >>" Width="110" Margin="0,0,0,10"/>
                            <Button Content="Remove order" Width="110"/>
                        </StackPanel>

                        <!-- BOTTOM RIGHT: Order List -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Orders" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox Height="200">
                                <ListBoxItem>Book Title</ListBoxItem>
                                <ListBoxItem>Book Title</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Grid>

                    <!-- FAR RIGHT: Search button -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <TextBlock Text="Select seach method: "  FontWeight="Bold" Margin="0,0,0,0"/>
                        <ComboBox  Margin="0,0,0,10"/>
                        <TextBlock Text="Enter value and press enter: "  FontWeight="Bold" Margin="0,0,0,0"/>
                        <TextBox  Margin="0,0,0,10"/>
                        <TextBlock Text="Select for search:" FontWeight="Bold" Margin="0,0,0,0"/>
                        <ListBox Height="130">
                            <ListBoxItem>value...</ListBoxItem>
                            <ListBoxItem>value...</ListBoxItem>
                        </ListBox>
                        <TextBlock Text="Order List" FontWeight="Bold" Margin="0,0,0,0"/>
                        <ListBox Height="130">
                            <ListBoxItem>Order ID, date</ListBoxItem>
                            <ListBoxItem>Order ID, date</ListBoxItem>
                        </ListBox>
                    </StackPanel>

                </Grid>
            </TabItem>




        </TabControl>
        <!-- Bottom Status Bar -->
        <Border Grid.Row="1" Background="#EEE" Padding="5" BorderThickness="1,0,0,0" BorderBrush="#CCC">
            <TextBlock x:Name="StatusText"
                   Text="Ready."
                   FontSize="12"
                   Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
