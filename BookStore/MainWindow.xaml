<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="BookStore" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Main content -->
            <RowDefinition Height="Auto" />
            <!-- Status bar -->
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Login">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Database Login" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200" Name="userId"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Password:" Width="100"/>
                            <TextBox Width="200" Name="loginPassword"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Database:" Width="100"/>
                            <TextBox Width="200" Name="dataBaseName"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Button Content="Login" Width="66" Margin="0,0,0,0" Name="LoginBtn" Click="LoginBtn_Click"/>
                            <Button Content="Clear" Width="66" Margin="10,0,0,0" Name="clearLoginBtn" Click="ClearLogin_Click"/>
                        </StackPanel>
                        
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                      
 
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Customer" Height="20" VerticalAlignment="Center" x:Name="CustomerTab">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Customer Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerNameTextBox"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerEmailTextBox"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Address:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerAddressTextBox"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Phone:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerPhoneTextBox"/>
                        </StackPanel>

                        <TextBlock Text="Customer List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid Height="200" AutoGenerateColumns="True" AutoGeneratingColumn="CustomerList_Columns" x:Name="CustomerList">
  
                        </DataGrid>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Customer" Width="140" Margin="0,0,0,10" x:Name="AddCustomerBtn" Click="AddCustomerBtn_Click"/>
                        <Button Content="Remove Customer" Width="140" Margin="0,0,0,10" Click="RemoveCustomer_Click"/>
                        <Button Content="Search Customer" Width="140" Margin="0,0,0,10" x:Name="SearchCustomer" Click="SearchForCustomer_Click"/>
                        <Button Content="Display All Customers" Width="140" Margin="0,0,0,10" x:Name="DisplayAllCustomers" Click="DisplayAllCustomers_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Book">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Book info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Book Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Title:" Width="100"/>
                            <TextBox Width="200" x:Name="BookTitletextBox"/>
                        </StackPanel>
                        <!-- Author -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Author:" Width="100"/>
                            <TextBox Width="200" x:Name="BookAuthorTextBox"/>
                        </StackPanel>
                        <!-- ISBN -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="ISBN:" Width="100"/>
                            <TextBox Width="200" x:Name="IsbnTextBox"/>
                        </StackPanel>
                        <!-- PRICE -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Price:" Width="100"/>
                            <TextBox Width="200" x:Name="BookPriceTextBox"/>
                        </StackPanel>
                        <!-- Publisher -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Publisher:" Width="100"/>
                            <TextBox Width="200" x:Name="BookPublisherTextBox"/>
                        </StackPanel>
                        <!-- Category -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Category:" Width="100"/>
                            <ComboBox Width="200" x:Name="BookCategoryComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                        </StackPanel>
                        <!-- Stock -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Stock:" Width="100"/>
                            <TextBox Width="200" x:Name="BookStockTextBox"/>
                        </StackPanel>
                        <!-- Book List -->
                        <TextBlock Text="Book List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid Height="200" AutoGenerateColumns="True" AutoGeneratingColumn="BookList_Columns" x:Name="BookList">
                        </DataGrid>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Book" Width="140" Margin="0,0,0,10" x:Name="AddBook" Click="AddBook_Click"/>
                        <Button Content="Remove Book" Width="140" Margin="0,0,0,10" Click="RemoveBook_Click"/>
                        <Button Content="Search Book" Width="140" x:Name="SearchBook" Click="SearchBook_Click"/>
                    </StackPanel>
                </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Order -->
            <TabItem Header="Order">
                <Grid Margin="10" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/> <!-- Top Section -->
                        <RowDefinition Height="2*"/> <!-- Bottom Section -->
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/> <!-- Left: Selection -->
                            <ColumnDefinition Width="1*"/> <!-- Right: Cart -->
                        </Grid.ColumnDefinitions>

                        <!-- LEFT COLUMN: Customer & Book -->
                        <Grid Grid.Column="0" Margin="0,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/> <!-- Customer -->
                                <RowDefinition Height="*"/> <!-- Book -->
                            </Grid.RowDefinitions>

                            <!-- CUSTOMER SECTION -->
                            <GroupBox Grid.Row="0" Header="Customer" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="Search" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox x:Name="OrderCustomerSearchBox" Width="200" TextChanged="OrderCustomerSearchBox_TextChanged"/>
                                    </StackPanel>
                                    <DataGrid Grid.Row="1" x:Name="OrderCustomerGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="OrderCustomerGrid_SelectionChanged">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="40"/>
                                            <DataGridTextColumn Header="Name" Binding="{Binding CustomerName}" Width="90"/>
                                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>

                            <!-- BOOK SECTION -->
                            <GroupBox Grid.Row="1" Header="Book Info" Margin="0,5,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="Search" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox x:Name="OrderBookSearchBox" Width="200" TextChanged="OrderBookSearchBox_TextChanged"/>
                                    </StackPanel>
                                    
                                    <DataGrid Grid.Row="1" x:Name="OrderBookGrid" AutoGenerateColumns="False" SelectionMode="Single" MouseDoubleClick="OrderBookGrid_MouseDoubleClick" SelectionChanged="OrderBookGrid_SelectionChanged">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="40" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Title}" Width="90" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="100" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="90" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Publisher" Binding="{Binding PublisherID}" Width="90" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" IsReadOnly="True"/>
                                            <!-- Qty Column for User Input -->
                                            <DataGridTemplateColumn Header="Qty" Width="50">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding QuantityToBuy, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                        <DataGrid.ToolTip>
                                            <ToolTip Content="Select Qty and Double click to add to cart"/>
                                        </DataGrid.ToolTip>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>
                        </Grid>

                        <!-- RIGHT COLUMN: SHOPPING CART -->
                        <GroupBox Grid.Column="1" Header="Shopping Cart">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <DataGrid Grid.Row="0" x:Name="ShoppingCartGrid" AutoGenerateColumns="False" IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Book" Binding="{Binding BookTitle}" Width="*"/>
                                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}"/>
                                        <DataGridTextColumn Header="Price" Binding="{Binding TotalPrice, StringFormat=C}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Grid Grid.Row="1" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1" Text="Total:" FontWeight="Bold" Margin="0,0,20,0"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock x:Name="CartTotalItemsText" Text="0" Margin="0,0,20,0"/>
                                        <TextBlock x:Name="CartTotalPriceText" Text="$0.00" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                    <Button Content="Submit" Width="80" Margin="0,0,10,0" x:Name="SubmitOrderBtn" Click="SubmitOrder_Click"/>
                                    <Button Content="Cancel" Width="80" Click="ClearCart_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <!-- BOTTOM SECTION: ORDER LIST -->
                    <GroupBox Grid.Row="1" Header="Order List" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Search by" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <ComboBox x:Name="HistorySearchMethodCombo" Width="120" Margin="0,0,10,0">
                                    <ComboBoxItem Content="Order ID" IsSelected="True"/>
                                    <ComboBoxItem Content="Customer Name"/>
                                    <ComboBoxItem Content="Book Title"/>
                                </ComboBox>
                                <TextBox x:Name="HistorySearchValueBox" Width="200" KeyDown="HistorySearch_KeyDown"/>
                                <Button Content="Search" Width="60" Margin="10,0,0,0" Click="HistorySearchButton_Click"/>
                                <Button Content="Remove" Width="60" Margin="10,0,0,0" Click="RemoveOrder_Click"/>
                                <Button Content="Refresh" Width="60" Margin="10,0,0,0" Click="RefreshHistory_Click"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="OrderHistoryGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="OrderHistoryGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="OrderID" Binding="{Binding OrderId}"/>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                                    <DataGridTextColumn Header="Book" Binding="{Binding BookTitle}" Width="*"/>
                                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}"/>
                                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}"/>
                                    <DataGridTextColumn Header="OrderDate" Binding="{Binding OrderDate}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>




        </TabControl>
        <!-- Bottom Status Bar -->
        <Border Grid.Row="1" Background="#EEE" Padding="5" BorderThickness="1,0,0,0" BorderBrush="#CCC">
            <TextBlock x:Name="StatusText"
                   Text="Ready."
                   FontSize="12"
                   Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
