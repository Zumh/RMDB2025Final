<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="BookStore" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Main content -->
            <RowDefinition Height="Auto" />
            <!-- Status bar -->
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Login">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Database Login" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200" Name="userId"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Password:" Width="100"/>
                            <TextBox Width="200" Name="loginPassword"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Database:" Width="100"/>
                            <TextBox Width="200" Name="dataBaseName"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Button Content="Login" Width="66" Margin="0,0,0,0" Name="LoginBtn" Click="LoginBtn_Click"/>
                            <Button Content="Clear" Width="66" Margin="10,0,0,0" Name="clearLoginBtn" Click="ClearLogin_Click"/>
                        </StackPanel>
                        
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                      
 
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Customer" Height="20" VerticalAlignment="Center" x:Name="CustomerTab">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Customer info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Customer Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerNameTextBox"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerEmailTextBox"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Address:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerAddressTextBox"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Phone:" Width="100"/>
                            <TextBox Width="200" x:Name="CustomerPhoneTextBox"/>
                        </StackPanel>

                        <TextBlock Text="Customer List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid Height="200" AutoGenerateColumns="True" AutoGeneratingColumn="CustomerList_Columns" x:Name="CustomerList">
  
                        </DataGrid>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Customer" Width="140" Margin="0,0,0,10" x:Name="AddCustomerBtn" Click="AddCustomerBtn_Click"/>
                        <Button Content="Remove Customer" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Search Customer" Width="140" Margin="0,0,0,10" x:Name="SearchCustomer" Click="SearchForCustomer_Click"/>
                        <Button Content="Display All Customers" Width="140" Margin="0,0,0,10" x:Name="DisplayAllCustomers" Click="DisplayAllCustomers_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Book" HorizontalAlignment="Left" Width="39">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left side (inputs) -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right side (buttons) -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Book info -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Book Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Title:" Width="100"/>
                            <TextBox Width="200" x:Name="BookTitletextBox"/>
                        </StackPanel>
                        <!-- ISBN -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="ISBN:" Width="100"/>
                            <TextBox Width="200" x:Name="IsbnTextBox"/>
                        </StackPanel>
                        <!-- PRICE -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Price:" Width="100"/>
                            <TextBox Width="200" x:Name="BookPriceTextBox"/>
                        </StackPanel>
                        <!-- Publisher -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Publisher:" Width="100"/>
                            <TextBox Width="200" x:Name="BookPublisherTextBox"/>
                        </StackPanel>
                        <!-- Stock -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Stock:" Width="100"/>
                            <TextBox Width="200" x:Name="BookStockTextBox"/>
                        </StackPanel>
                        <!-- Book List -->
                        <TextBlock Text="Book List" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid Height="200" AutoGenerateColumns="True" AutoGeneratingColumn="BookList_Columns" x:Name="BookList">
                        </DataGrid>
                    </StackPanel>

                    <!-- RIGHT SIDE: Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <Button Content="Add Book" Width="140" Margin="0,0,0,10" x:Name="AddBook" Click="AddBook_Click"/>
                        <Button Content="Remove Book" Width="140" Margin="0,0,0,10"/>
                        <Button Content="Search Book" Width="140" x:Name="SearchBook" Click="SearchBook_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Order -->
            <TabItem Header="Order">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- MAIN CONTENT (LEFT AREA) -->
                    <Grid Grid.Column="0" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- TOP LEFT: Customer & Book Information -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Customer Selection" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="OrderCustomerComboBox" Margin="0,0,0,10" DisplayMemberPath="CustomerName" SelectedValuePath="CustomerId"/>

                            <TextBlock Text="Book Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Title:" Width="100"/>
                                <TextBlock x:Name="SelectedBookTitle" Text="..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="ISBN:" Width="100"/>
                                <TextBlock x:Name="SelectedBookISBN" Text="..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Price:" Width="100"/>
                                <TextBlock x:Name="SelectedBookPrice" Text="..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Publisher:" Width="100"/>
                                <TextBlock x:Name="SelectedBookPublisher" Text="..." />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Stock:" Width="100"/>
                                <TextBlock x:Name="SelectedBookStock" Text="0"/>
                            </StackPanel>
                            
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Quantity:" Width="100"/>
                                <TextBox x:Name="OrderQuantityTextBox" Width="100" Text="1"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- TOP RIGHT: Order Summary -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                            <TextBlock Text="Order Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Total Items:" Width="90"/>
                                <TextBlock x:Name="TotalItemsText" Text="0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total Price:" Width="90"/>
                                <TextBlock x:Name="TotalPriceText" Text="$0.00"/>
                            </StackPanel>
                            
                            <Button Content="Submit Order" Margin="0,20,0,0" Height="40" Background="#DDDDDD" Click="SubmitOrder_Click"/>
                        </StackPanel>

                        <!-- BOTTOM LEFT: Book List -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Available Books" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox Height="200" x:Name="OrderBookList" DisplayMemberPath="Title" SelectionChanged="OrderBookList_SelectionChanged"/>
                        </StackPanel>

                        <!-- MIDDLE: Add / Remove Buttons -->
                        <StackPanel Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                            <Button Content="Add to Order >>" Width="110" Margin="0,0,0,10" Click="AddToOrder_Click"/>
                            <Button Content="Remove Item" Width="110" Click="RemoveFromOrder_Click"/>
                        </StackPanel>

                        <!-- BOTTOM RIGHT: Order List -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Current Order Items" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox Height="200" x:Name="CurrentOrderList" DisplayMemberPath="Title"/> 
                             <!-- Note: DisplayMemberPath might need a wrapper object or formatted string -->
                        </StackPanel>
                    </Grid>

                    <!-- FAR RIGHT: Search button -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <TextBlock Text="Select seach method: "  FontWeight="Bold" Margin="0,0,0,0"/>
                        <ComboBox x:Name="SearchMethodComboBox" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Enter value and press enter: "  FontWeight="Bold" Margin="0,0,0,0"/>
                        <TextBox x:Name="SearchValueTextBox" Margin="0,0,0,10" KeyDown="SearchValue_KeyDown"/>
                        
                        <TextBlock Text="Select for search:" FontWeight="Bold" Margin="0,0,0,0"/>
                        <ListBox x:Name="SearchResultsListBox" Height="130" SelectionChanged="SearchResults_SelectionChanged"/>
                        
                        <TextBlock Text="Order List" FontWeight="Bold" Margin="0,0,0,0"/>
                        <ListBox x:Name="OrderDetailsListBox" Height="130"/>
                    </StackPanel>

                </Grid>
            </TabItem>




        </TabControl>
        <!-- Bottom Status Bar -->
        <Border Grid.Row="1" Background="#EEE" Padding="5" BorderThickness="1,0,0,0" BorderBrush="#CCC">
            <TextBlock x:Name="StatusText"
                   Text="Ready."
                   FontSize="12"
                   Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
